<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>LoginCreate</servlet-name>
        <servlet-class>edu.csueb.cs3520.servlet.LoginCreate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>AdminServlet</servlet-name>
        <servlet-class>edu.csueb.cs3520.servlet.AdminServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>mapCreate</servlet-name>
        <servlet-class>edu.csueb.cs3520.servlet.mapCreate</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>EmailListServlet</servlet-name>
        <servlet-class>edu.csueb.cs3520.servlet.EmailListServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>edu.csueb.cs3520.servlet.Logout</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>QuoteServlet</servlet-name>
        <servlet-class>edu.csueb.cs3520.servlet.QuoteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginCreate</servlet-name>
        <url-pattern>/createAccount</url-pattern>
        <url-pattern>/loginAccount</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>AdminServlet</servlet-name>
        <url-pattern>/AdminServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>mapCreate</servlet-name>
        <url-pattern>/mapCreate</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>EmailListServlet</servlet-name>
        <url-pattern>/EmailListServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/Logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>QuoteServlet</servlet-name>
        <url-pattern>/QuoteServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
